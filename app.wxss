@import "./styles/iconfont.wxss"; 
 
/* 在微信小程序中不支持通配符“*” */
page,view,text,swiper,swiper-item,image,navigetor{
    padding: 0; 
    margin: 0;
    box-sizing: border-box;
}

/* 定义主题颜色变量 
    1、less中存在变量知识
    2、原生CSS和WXSS也是支持变量的

*/
page{ 
    /* 定义主题颜色 */
    --themeColor:#eb4450;
    /* 定义统一的字体尺寸 假设设计稿 大小是375rpx
        1px = 2rpx
        14px = 28rpx
    */
    font-size: 28rpx;
}
image{
    width: 100%;
}
